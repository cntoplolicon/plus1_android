<resources>
    <declare-styleable name="ActionBarLayout">
        <attr name="page_title" format="string" />
        <attr name="hide_back_arrow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="slide_switch">
        <attr name="themeColor" format="color" />
        <attr name="isOpen" format="boolean" />
        <attr name="shape">
            <enum name="rect" value="1" />
            <enum name="circle" value="2" />
        </attr>
    </declare-styleable>
</resources>