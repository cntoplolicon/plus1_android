<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profile_background">

    <swj.swj.view.ActionBarLayout
        android:id="@+id/action_bar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/action_bar_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        custom:page_title="@string/personal_information" />

    <TextView
        android:id="@+id/re_avatar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_text_avatar_height"
        android:layout_below="@+id/action_bar"
        android:layout_marginTop="@dimen/profile_text_avatar_margin"
        android:background="@color/common_white_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/profile_text_padding"
        android:text="@string/change_personal_avatar"
        android:textColor="@color/settings_common_title"
        android:textSize="@dimen/settings_common_text" />

    <ImageView
        android:id="@+id/iv_forward_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/re_avatar"
        android:layout_marginRight="@dimen/profile_arrow_margin"
        android:layout_marginTop="@dimen/profile_avatar_arrow_top"
        android:src="@drawable/arrow_right_open" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/profile_avatar_size"
        android:layout_height="@dimen/profile_avatar_size"
        android:layout_alignTop="@+id/re_avatar"
        android:layout_marginRight="@dimen/profile_arrow_margin"
        android:layout_marginTop="@dimen/profile_avatar_margin_top"
        android:layout_toLeftOf="@+id/iv_forward_avatar"
        app:border_color="#b3b3b3"
        app:border_width="2px" />

    <TextView
        android:id="@+id/re_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_text_height"
        android:layout_below="@+id/re_avatar"
        android:layout_marginTop="1dp"
        android:background="@color/common_white_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/profile_text_padding"
        android:text="@string/change_personal_nickname"
        android:textColor="@color/settings_common_title"
        android:textSize="@dimen/settings_common_text" />

    <ImageView
        android:id="@+id/iv_forward_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/re_nickname"
        android:layout_marginRight="@dimen/profile_arrow_margin"
        android:layout_marginTop="@dimen/profile_common_arrow_top"
        android:src="@drawable/arrow_right_open" />

    <TextView
        android:id="@+id/tv_profile_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_forward_nick"
        android:layout_marginRight="@dimen/profile_arrow_margin"
        android:layout_toLeftOf="@+id/iv_forward_nick"
        android:layout_toStartOf="@+id/iv_forward_nick"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:text="海绵宝宝"
        android:textColor="@color/profile_show_user_info"
        android:textSize="@dimen/profile_show_info" />


    <TextView
        android:id="@+id/re_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_text_height"
        android:layout_below="@+id/re_nickname"
        android:layout_marginTop="@dimen/profile_margin_between_module"
        android:background="@color/common_white_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/profile_text_padding"
        android:text="@string/pwd_reset"
        android:textColor="@color/settings_common_title"
        android:textSize="@dimen/settings_common_text" />


    <TextView
        android:id="@+id/re_sign"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_text_height"
        android:layout_below="@+id/re_password"
        android:layout_marginTop="1dp"
        android:background="@color/common_white_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/profile_text_padding"
        android:text="@string/change_biography"
        android:textColor="@color/settings_common_title"
        android:textSize="@dimen/settings_common_text" />

    <ImageView
        android:id="@+id/iv_forward_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/re_sign"
        android:layout_marginRight="@dimen/profile_arrow_margin"
        android:layout_marginTop="@dimen/profile_common_arrow_top"
        android:src="@drawable/arrow_right_open" />

    <TextView
        android:id="@+id/re_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_text_height"
        android:layout_below="@+id/re_sign"
        android:layout_marginTop="@dimen/profile_margin_between_module"
        android:background="@color/common_white_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/profile_text_padding"
        android:text="@string/telephone"
        android:textColor="@color/settings_common_title"
        android:textSize="@dimen/settings_common_text" />

    <ImageView
        android:id="@+id/iv_forward_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/re_phone"
        android:layout_marginRight="@dimen/profile_arrow_margin"
        android:layout_marginTop="@dimen/profile_common_arrow_top"
        android:src="@drawable/arrow_right_open" />

    <TextView
        android:id="@+id/tv_profile_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_forward_phone"
        android:layout_marginRight="@dimen/profile_arrow_margin"
        android:layout_toLeftOf="@+id/iv_forward_phone"
        android:layout_toStartOf="@+id/iv_forward_phone"
        android:gravity="end"
        android:textColor="@color/profile_show_user_info"
        android:textSize="@dimen/profile_show_info" />

</RelativeLayout>