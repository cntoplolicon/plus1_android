<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="swj.swj.activity.ResetPwdStepThree">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_password"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="53dp"
        android:hint="@string/hint_input_new_pwd"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_password_confirmation"
        android:layout_below="@+id/et_password"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignStart="@+id/et_password"
        android:layout_marginTop="41dp"
        android:hint="@string/hint_new_pwd_confirm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/resetPwdStepThreeErrorMessage"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/et_password_confirmation"
        android:layout_alignStart="@+id/et_password_confirmation"
        android:layout_alignRight="@+id/et_password_confirmation"
        android:layout_alignEnd="@+id/et_password_confirmation" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_new_pwd"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/resetPwdStepThreeErrorMessage"
        android:layout_alignLeft="@+id/resetPwdStepThreeErrorMessage"
        android:layout_alignStart="@+id/resetPwdStepThreeErrorMessage"
        android:layout_alignRight="@+id/resetPwdStepThreeErrorMessage"
        android:layout_alignEnd="@+id/resetPwdStepThreeErrorMessage" />

</RelativeLayout>
