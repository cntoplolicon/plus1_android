<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <swj.swj.view.RoundedImageView
            android:id="@+id/rounded_image_personal_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/default_useravatar" />


        <TextView
            android:id="@+id/tv_myself_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/rounded_image_personal_avatar"
            android:text="用户昵称"
            android:textColor="#ff62b8"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/tv_myself_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_myself_nickname"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_myself_nickname"
            android:src="@drawable/icon_woman"/>

        <TextView
            android:id="@+id/tv_myself_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_myself_nickname"
            android:layout_below="@+id/tv_myself_nickname"
            android:layout_marginTop="10dp"
            android:text="个性签名个性签名"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_influence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_myself_sign"
            android:layout_below="@+id/tv_myself_sign"
            android:layout_marginTop="10dp"
            android:text="影响力: "
            android:textColor="#5c5c5c"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_influence_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_influence"
            android:layout_toRightOf="@+id/tv_influence"
            android:text=" 800"
            android:textColor="#ff7800"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_influence"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_influence_value"
            android:text="每次发给4个陌生人"
            android:textColor="#5c5c5c"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rounded_image_personal_avatar"
            android:layout_below="@+id/rounded_image_personal_avatar"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_myself_publish"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_weight="0.50"
                android:background="@drawable/personal_tv_border_left_pressed"
                android:gravity="center"
                android:text="我发布的"
                android:textColor="#303030"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_myself_collect"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_weight="0.50"
                android:background="@drawable/personal_tv_border_right_unpressed"
                android:gravity="center"
                android:text="我的收藏"
                android:textColor="#929292"
                android:textSize="13sp" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
