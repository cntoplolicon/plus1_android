<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white_bg">

    <swj.swj.view.ActionBarLayout
        android:id="@+id/action_bar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/action_bar_height"
        custom:page_title="@string/pwd_reset" />

    <EditText
        android:id="@+id/et_old_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/action_bar"
        android:layout_marginLeft="@dimen/common_margin_change_password"
        android:layout_marginRight="@dimen/common_margin_change_password"
        android:layout_marginTop="130dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/hint_input_old_pwd"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:textColorHint="@color/profile_hint_text"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/settings_common_text" />

    <TextView
        android:id="@+id/register_line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/et_old_password"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/home_title_color" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/et_old_password"
        android:layout_marginLeft="@dimen/common_margin_change_password"
        android:layout_marginRight="@dimen/common_margin_change_password"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/hint_input_new_pwd"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:textColorHint="@color/profile_hint_text"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/settings_common_text" />


    <TextView
        android:id="@+id/register_line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/et_password"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/home_title_color" />

    <EditText
        android:id="@+id/et_password_confirmation"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/et_password"
        android:layout_marginLeft="@dimen/common_margin_change_password"
        android:layout_marginRight="@dimen/common_margin_change_password"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/hint_new_pwd_confirm"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:textColorHint="@color/profile_hint_text"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/settings_common_text" />


    <TextView
        android:id="@+id/register_line3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/et_password_confirmation"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/home_title_color" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/register_line3"
        android:layout_marginLeft="@dimen/common_margin_left_right"
        android:layout_marginRight="@dimen/common_margin_left_right"
        android:layout_marginTop="@dimen/register_margin_top_button_send_verification_code"
        android:background="@color/common_yellow"
        android:gravity="center"
        android:text="@string/save_new_pwd"
        android:textColor="@color/common_button_text_color"
        android:textSize="@dimen/common_yellow_button_text_size" />


</RelativeLayout>