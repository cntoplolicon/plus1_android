<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white_bg"
    android:orientation="vertical">

    <com.oneplusapp.view.ActionBarLayout
        android:id="@+id/action_bar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/action_bar_height"
        custom:page_title="@string/pwd_reset" />

    <EditText
        android:id="@+id/et_old_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_text_height"
        android:layout_marginLeft="@dimen/common_margin_change_password"
        android:layout_marginRight="@dimen/common_margin_change_password"
        android:layout_marginTop="104dp"
        android:background="@color/profile_input_background"
        android:hint="@string/hint_input_old_pwd"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:textColorHint="@color/profile_hint_text"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/settings_common_text" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_text_height"
        android:layout_marginLeft="@dimen/common_margin_change_password"
        android:layout_marginRight="@dimen/common_margin_change_password"
        android:layout_marginTop="15dp"
        android:background="@color/profile_input_background"
        android:hint="@string/hint_input_new_pwd"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:textColorHint="@color/profile_hint_text"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/settings_common_text" />

    <EditText
        android:id="@+id/et_password_confirmation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_text_height"
        android:layout_marginLeft="@dimen/common_margin_change_password"
        android:layout_marginRight="@dimen/common_margin_change_password"
        android:layout_marginTop="15dp"
        android:background="@color/profile_input_background"
        android:hint="@string/hint_new_pwd_confirm"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:textColorHint="@color/profile_hint_text"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/settings_common_text" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_text_height"
        android:layout_marginLeft="@dimen/common_margin_change_password"
        android:layout_marginRight="@dimen/common_margin_change_password"
        android:layout_marginTop="50dp"
        android:background="@color/common_yellow"
        android:text="@string/save_changes"
        android:textColor="@color/common_button_text_color"
        android:textSize="@dimen/common_yellow_button_text_size" />

</LinearLayout>