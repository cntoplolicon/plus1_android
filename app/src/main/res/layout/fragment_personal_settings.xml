<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/fragment_personal_settings_title_tv"
        style="@style/TitleStyle"
        android:gravity="center_vertical"
        android:text="@string/Settings" />

    <FrameLayout
        android:id="@+id/personal_settings_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_personal_settings_profile_title"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="top"
                android:layout_weight="0.05"
                android:gravity="center_vertical"
                android:text="个人"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/settings_title_color" />

            <TextView
                android:id="@+id/tv_personal_settings_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:gravity="center_vertical"
                android:text="个人资料"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tv_personal_settings_change_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:gravity="center_vertical"
                android:text="修改密码"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tv_personal_settings_notification_title"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_weight="0.05"
                android:gravity="center_vertical"
                android:text="偏好"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/settings_title_color" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="推送通知"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="46dp"
                    android:layout_weight="0.05"
                    android:showText="true"
                    android:textOff="OFF"
                    android:textOn="ON"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="0.05"
                android:text="退出登陆" />


        </LinearLayout>

    </FrameLayout>

</LinearLayout>