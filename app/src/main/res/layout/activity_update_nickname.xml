<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/settings_top_bar_blue">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/top_bar_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/btn_back"
            android:text="@string/change_nickname"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_nick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_text_height"
        android:layout_marginLeft="@dimen/profile_text_margin_horizontal"
        android:layout_marginRight="@dimen/profile_text_margin_horizontal"
        android:layout_marginTop="@dimen/profile_margin_between_module"
        android:background="@color/profile_input_background"
        android:hint="@string/hint_input_new_nickname"
        android:singleLine="true"
        android:textColorHint="@color/profile_hint_text"
        android:textSize="@dimen/settings_common_text" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_text_height"
        android:layout_marginLeft="@dimen/profile_text_margin_horizontal"
        android:layout_marginRight="@dimen/profile_text_margin_horizontal"
        android:layout_marginTop="@dimen/profile_edit_margin_top"
        android:background="@color/common_yellow"
        android:gravity="center"
        android:text="@string/save_changes"
        android:textColor="@color/profile_common_text"
        android:textSize="@dimen/settings_common_text" />

</LinearLayout>