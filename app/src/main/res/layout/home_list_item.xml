<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/home_round_image_length"
        android:layout_height="@dimen/home_round_image_length"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/default_useravatar"
        app:border_color="#fed724"
        app:border_width="2px" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_nick_name_margin_left"
        android:layout_marginTop="@dimen/home_nick_name_margin_top"
        android:layout_toRightOf="@+id/iv_avatar"
        android:drawablePadding="@dimen/home_text_image_spacing"
        android:drawableRight="@drawable/icon_woman"
        android:text="用户昵称"
        android:textColor="@color/personal_common_female_username"
        android:textSize="@dimen/home_nick_name_text_size" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_nickname"
        android:layout_below="@+id/tv_nickname"
        android:layout_marginBottom="@dimen/home_location_text_margin_bottom"
        android:layout_marginTop="@dimen/home_location_text_margin_top"
        android:drawableLeft="@drawable/icon_address"
        android:drawablePadding="@dimen/home_text_image_spacing"
        android:maxLines="2"
        android:minLines="1"
        android:text="北京市朝阳区"
        android:textColor="#999999"
        android:textSize="@dimen/personal_profile_text" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/home_big_image_length"
        android:maxWidth="@dimen/home_big_image_length"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_image"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:lines="3"
        android:text="喔噢"
        android:textColor="#999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/tv_line"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/tv_comments"
        android:drawableLeft="@drawable/icon_views"
        android:drawablePadding="5dp"
        android:text="150"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_line"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/icon_comment"
        android:drawablePadding="5dp"
        android:text="21"
        android:textSize="12sp" />

</RelativeLayout>
