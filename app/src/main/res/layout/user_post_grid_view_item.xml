<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/gridview_image_background"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/myself_grid_view_big_image_length"
        android:layout_height="@dimen/myself_grid_view_big_image_length"
        android:layout_margin="1dp"
        android:background="#fff"
        android:scaleType="centerCrop"></ImageView>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="@dimen/myself_grid_view_big_image_length"
        android:layout_height="@dimen/myself_grid_view_big_image_length"
        android:layout_alignBottom="@+id/iv_image"
        android:layout_margin="1dp"
        android:background="#fff"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="3"
        android:padding="15dp"
        android:text=""
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_image_info"
        android:layout_width="@dimen/myself_grid_view_big_image_length"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/iv_image"
        android:layout_alignParentLeft="true"
        android:background="#4d000000">

        <TextView
            android:id="@+id/tv_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/icon_views"
            android:drawablePadding="4dp"
            android:text="150"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/home_text_views_size" />

        <TextView
            android:id="@+id/tv_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/icon_comment"
            android:drawablePadding="5dp"
            android:text="21"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/home_text_views_size" />


    </RelativeLayout>

    <TextView
        android:layout_width="@dimen/myself_grid_view_big_image_length"
        android:layout_height="5dp"
        android:layout_below="@id/rl_image_info"
        android:background="#fff" />
</RelativeLayout>