<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <com.oneplusapp.view.ActionBarLayout
        android:id="@+id/action_bar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/action_bar_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        custom:page_title="@string/feedback_title" />

    <EditText
        android:id="@+id/et_contact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:background="@color/profile_input_background"
        android:gravity="center"
        android:inputType="phone"
        android:hint="@string/feedback_contact_hint"
        android:textColorHint="@color/profile_hint_text"
        android:selectAllOnFocus="true"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_above="@id/et_contact"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:background="@color/profile_input_background"
        android:gravity="top"
        android:hint="@string/feedback_text_hint"
        android:paddingLeft="15dp"
        android:textColorHint="@color/profile_hint_text"
        android:paddingTop="15dp"
        android:selectAllOnFocus="true"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_text_height"
        android:layout_below="@id/et_contact"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="@color/common_yellow"
        android:text="@string/save_feedback"
        android:textColor="@color/profile_common_text"
        android:textSize="@dimen/settings_common_text" />

</RelativeLayout>