<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_paddingTop="15dp"
    android:layout_paddingBottom="15dp">

    <FrameLayout
        android:id="@+id/cleared_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_no_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="暂时没有新话题"
                android:textColor="@color/profile_hint_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_no_message"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="82dp"
                android:text="热门"
                android:textColor="@color/common_yellow"
                android:textSize="25sp" />

            <TextView

                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_no_message"
                android:layout_marginRight="10dp"
                android:layout_marginTop="85dp"
                android:layout_toLeftOf="@id/tv_hot"
                android:text="快去"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_hot"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="围观一下"
                android:textSize="20sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="180dp"
                android:src="@drawable/homepage_cleared" />

        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/homepage_loading" />
    </FrameLayout>

    <com.oneplusapp.view.HomePageLayout
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <FrameLayout
            android:id="@+id/top_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--<ImageView-->
                <!--android:id="@+id/iv_skip"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:scaleType="centerCrop" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:tag="text"
                android:text="@string/home_pass_post"
                android:textColor="#666666"
                android:textSize="16sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/bottom_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--<ImageView-->
                <!--android:id="@+id/iv_spread"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:scaleType="centerCrop" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:tag="text"
                android:text="@string/home_spread_post"
                android:textColor="#fefefe"
                android:textSize="16sp" />
        </FrameLayout>
    </com.oneplusapp.view.HomePageLayout>
</FrameLayout>
