<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp">

        <TextView
            android:id="@+id/tv_security_code_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:text="@string/security_code_sent"
            android:textColor="@color/et_hint"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_chosen_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_security_code_sent"
            android:textColor="@color/login_page_link"
            android:textSize="16sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_testing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <EditText
            android:id="@+id/et_security_code"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/hint_security_code"
            android:textSize="13sp"
            android:inputType="phone"
            android:textColorHint="@color/et_hint"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/register_line"
            android:layout_alignStart="@+id/register_line" />

        <TextView
            android:id="@+id/register_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignBottom="@+id/btn_resend_security_code"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="55dp"
            android:layout_toLeftOf="@+id/btn_resend_security_code"
            android:background="@color/home_title_color" />

        <Button
            android:id="@+id/btn_resend_security_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_submit"
            android:text="@string/send_again"
            android:textSize="16sp"
            android:textColor="@color/register_button_text_color" />
    </RelativeLayout>


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="57dp"
        android:background="@color/test_yellow"
        android:textSize="16sp"
        android:text="@string/next_activity" />

</LinearLayout>
