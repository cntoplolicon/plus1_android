<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="swj.swj.activity.LoginActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:id="@+id/btn_submit"
        android:layout_below="@+id/et_password"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignStart="@+id/et_password"
        android:layout_alignRight="@+id/et_password"
        android:layout_alignEnd="@+id/et_password"
        android:layout_marginTop="10dp"
        android:background="@color/test_yellow"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/et_username"
        android:hint="@string/hint_input_phone"
        android:drawableLeft="@drawable/username"
        android:drawablePadding="15dp"
        android:textColorHint="@color/et_hint"
        android:textSize="16dp"
        android:paddingLeft="15dp"
        android:background="@color/et_background"
        android:layout_below="@+id/fragment4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_password"
        android:hint="@string/hint_input_pwd"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="15dp"
        android:textColorHint="@color/et_hint"
        android:textSize="16dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/et_background"
        android:layout_below="@+id/et_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_reset_pwd"
        android:id="@+id/tv_to_reset_pwd"
        android:textColor="@color/login_page_link"
        android:textSize="14dp"
        android:layout_below="@+id/btn_submit"
        android:layout_alignLeft="@+id/btn_submit"
        android:layout_alignStart="@+id/btn_submit"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_register"
        android:id="@+id/tv_to_register"
        android:textColor="@color/login_page_link"
        android:textSize="14dp"
        android:layout_alignTop="@+id/tv_to_reset_pwd"
        android:layout_alignRight="@+id/btn_submit"
        android:layout_alignEnd="@+id/btn_submit" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:name="swj.swj.fragment.CustomActionBarFragment"
        android:id="@+id/fragment4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
