<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#919191"
        >
        <TextView
            android:id="@+id/tv_title"
            style="@style/TitleStyle"
            android:text="@string/onHome"
            />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#9e9e9e"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_Home"
            style="@style/ButtonTabStyle"
            android:onClick="onHome"
            android:text="@string/onHome"
            android:textColor="#f00" />

        <RadioButton
            android:id="@+id/rb_Friends"
            style="@style/ButtonTabStyle"
            android:onClick="onFriends"
            android:text="@string/onFriends" />

        <RadioButton
            android:id="@+id/rb_Camera"
            style="@style/ButtonTabStyle"
            android:onClick="onCamera"
            android:text="@string/onCamera" />

        <RadioButton
            android:id="@+id/rb_Message"
            style="@style/ButtonTabStyle"
            android:onClick="onMessage"
            android:text="@string/onMessage" />

        <RadioButton
            android:id="@+id/rb_MySelf"
            style="@style/ButtonTabStyle"
            android:onClick="onMySelf"
            android:text="@string/onMyself" />


    </RadioGroup>

</LinearLayout>
