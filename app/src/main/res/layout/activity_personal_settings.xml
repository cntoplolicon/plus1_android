<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/message_background">

    <swj.swj.view.ActionBarLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        custom:page_title="设置" />

    <TextView
        android:id="@+id/tv_personal_settings_nickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/action_bar"
        android:layout_marginBottom="21dp"
        android:layout_marginTop="15dp"
        android:background="@color/common_white_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:text="昵称"
        android:textColor="@color/personal_common_female_username"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_forward_avatar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_personal_settings_nickname"
        android:layout_marginRight="@dimen/common_margin_left_right"
        android:src="@drawable/arrow_right_open" />

    <TextView
        android:id="@+id/tv_idea"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_clear_cache"
        android:layout_marginTop="2dp"
        android:background="@color/common_white_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:text="意见反馈"
        android:textColor="@color/settings_common_title"
        android:textSize="@dimen/settings_common_text" />

    <ImageView
        android:id="@+id/iv_forward_idea"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_idea"
        android:layout_marginRight="@dimen/common_margin_left_right"
        android:src="@drawable/arrow_right_open" />

    <TextView
        android:id="@+id/tv_notification_switch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_personal_settings_nickname"
        android:layout_marginTop="1dp"
        android:background="@color/common_white_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:text="@string/notifications_from_app"
        android:textColor="@color/settings_common_title"
        android:textSize="@dimen/settings_common_text" />

    <Switch
        android:id="@+id/switch_notification"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_notification_switch"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical"
        android:showText="true"
        android:switchMinWidth="30dp"
        android:textOff="@string/off"
        android:textOn="@string/on" />

    <TextView
        android:id="@+id/tv_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_notification_switch"
        android:layout_marginTop="2dp"
        android:background="@color/common_white_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/settings_common_margin_left"
        android:text="清除缓存"
        android:textColor="@color/settings_common_title"
        android:textSize="@dimen/settings_common_text" />

    <TextView
        android:id="@+id/tv_cache"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_clear_cache"
        android:layout_marginRight="@dimen/common_margin_left_right"
        android:gravity="center_vertical"
        android:text="12M"
        android:textColor="@color/settings_common_title" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_idea"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="60dp"
        android:background="@color/common_yellow"
        android:text="@string/log_out"
        android:textSize="@dimen/common_yellow_button_text_size" />

</RelativeLayout>