<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white_bg">

    <com.oneplusapp.view.HeaderGridView
        android:id="@+id/grid_view_authored_posts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:clipToPadding="false"
        android:fadingEdgeLength="100dp"
        android:horizontalSpacing="@dimen/myself_grid_view_horizontal_spacing"
        android:numColumns="auto_fit"
        android:paddingBottom="@dimen/myself_grid_view_vertical_spacing"
        android:paddingLeft="@dimen/myself_grid_view_margin_left"
        android:paddingRight="@dimen/myself_grid_view_margin_right"
        android:scrollbarStyle="outsideOverlay"
        android:verticalSpacing="@dimen/myself_grid_view_vertical_spacing" />

    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid_view_authored_posts"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/loading_small" />

    <TextView
        android:id="@+id/tv_content_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_view_authored_posts"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="@color/profile_hint_text"/>

</RelativeLayout>
