<?xml version="1.0" encoding="utf-8"?>

<manifest package="swj.swj"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="swj.swj.application.SnsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/title_activity_splash"
            android:noHistory="true">
        </activity>
        <activity android:name=".activity.PersonalSettingsActivity"/>
        <activity android:name=".activity.PersonalProfileActivity"/>
        <activity android:name=".activity.UpdateNicknameActivity"/>
        <activity android:name=".activity.UpdateSignActivity"/>
        <activity android:name=".activity.ChangePasswordActivity"/>
        <activity android:name=".activity.PublishActivity"/>
        <activity android:name=".activity.AddTextActivity"/>
        <activity android:name=".activity.PublishTextActivity"/>
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.ResetPhoneActivity"/>
        <activity android:name=".activity.ResetPhoneStepTwoActivity"/>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".activity.RegisterStepOne"
            android:label="@string/register_step_one"
            android:parentActivityName=".activity.LoginActivity"/>
        <activity
            android:name=".activity.RegisterStepTwo"
            android:label="@string/register_step_two"
            android:parentActivityName=".activity.RegisterStepOne"/>
        <activity
            android:name=".activity.RegisterStepThree"
            android:label="@string/register_step_three"
            android:parentActivityName=".activity.RegisterStepTwo"/>
        <activity
            android:name=".activity.ResetPwdStepOne"
            android:label="@string/reset_pwd_step_one"
            android:parentActivityName=".activity.LoginActivity"/>
        <activity
            android:name=".activity.ResetPwdStepTwo"
            android:label="@string/reset_pwd_step_two"
            android:parentActivityName=".activity.ResetPwdStepOne"/>
        <activity
            android:name=".activity.ResetPwdStepThree"
            android:label="@string/reset_pwd_step_three"
            android:parentActivityName=".activity.ResetPwdStepTwo" />
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />

    </application>

</manifest>
